extends ./common

block customizeCss
  // Components CSS
  link(rel='stylesheet' type='text/css' href='./css/components/header.css')
  link(rel='stylesheet' type='text/css' href='./css/components/buying/product-info.css')
  link(rel='stylesheet' type='text/css' href='./css/components/buying/buying-section.css')
  // Common CSS
  link(rel='stylesheet' type='text/css' href='./css/main.css')
  link(rel='stylesheet' type='text/css' href='./css/except-home-page.css')
  link(rel='stylesheet' type='text/css' href='./css/buying.css')

block title
  title Mua sản phẩm

block header
  include ./template-parts/header

block mainContent
  .main-wrapper.container
    .row
      // Product Info Section
      section.product-info-wrapper.col-lg-7
        .product-info
          .product-name
            | Adidas Yeezy Boost 700 Wave Runner Solid Grey
          .price-info
            span.first-row
              | Gi&aacute; &dstrok;&#x1EB7;t mua cao nh&#x1EA5;t: 
              span.bid-price-info 9.310.000 &#x20AB;
            span.line |
            span.second-line Gi&aacute; &dstrok;&#x1EB7;t b&aacute;n th&#x1EA5;p nh&#x1EA5;t: 
              span.ask-price-info 9.550.000 &#x20AB;
          .size-info-wrapper
            | Size: 
            span.size-info
              | 8US | 41VN | 26CM
          a.product-image(href='./product-details.html')
            img.img-fluid(src='./image/product-details-image/1.jpg' alt='image-1')
      // Buying Function Section
      section.buying.col-lg-5
        // Adress Section
        .address-info-wrapper.childs
          .header
            .title
              | &Dstrok;&#x1ECB;a ch&#x1EC9; nh&#x1EAD;n h&agrave;ng
            button.btn.btn-primary.change.red-btn
              | Thay &dstrok;&#x1ED5;i
          .info-wrapper.radio-wrapper
            input#address-info.address-radio-btn(type='radio' name='address-info' checked='')
            label(for='address-info')
              .radio-dot
              div
                .name-phone
                  b Cody
                  |  | 036530xxxx
                .address
                  | 48 T&#x1ED1; H&#x1EEF;u, L&ecirc; V&abreve;n L&#x1B0;&#x1A1;ng k&eacute;o d&agrave;i, T&#x1EEB; Li&ecirc;m, H&agrave; N&#x1ED9;i
        // Pricing Section
        .pricing.childs
          .size-btn
            button.btn.btn-primary.size.trans-btn
              span.size-text Size
              span.size-details 8US | 41VN | 26CM
              i.fas.fa-chevron-down.dropdown-arrow
          .bid-buy-btn
            button.bid-btn.btn.btn-primary.green-btn
              | &Dstrok;&#x1EB7;t gi&aacute; mua
            button.buy-btn.btn.btn-primary.trans-btn
              | Mua ngay
          input.price-input.form-control(type='text' placeholder='Đặt giá mua ...')
          .sub-price.price-include
            .text
              | Gi&aacute; s&#x1EA3;n ph&#x1EA9;m
            .sub-price-showing
              | 9.550.000 &#x20AB;
          .shipping-price.price-include
            .text
              | Ph&iacute; v&#x1EAD;n chuy&#x1EC3;n
            .sub-price-showing
              | 50.000 &#x20AB;
          .coupon.price-include
            .text
              | M&atilde; gi&#x1EA3;m gi&aacute;
            input.form-control(type='text' placeholder='Nhập mã giảm giá ...')
          .total-price.price-include
            .text
              | T&#x1ED5;ng thanh to&aacute;n
            .total-price-showing
              | 9.600.000 &#x20AB;
        // Payment Methods Section
        .payment-methods.childs
          .title
            | Ph&#x1B0;&#x1A1;ng th&#x1EE9;c thanh to&aacute;n
          .cod-wrapper.radio-wrapper
            input#cod.cod-radio-btn(type='radio' name='payment-methods' checked='')
            label(for='cod')
              .radio-dot
              .cod
                | Thanh to&aacute;n khi nh&#x1EAD;n h&agrave;ng
          .visa-master-wrapper.radio-wrapper
            input#visa-master.cod-radio-btn(type='radio' name='payment-methods')
            label(for='visa-master')
              .radio-dot
              .visa-master
                | Thanh to&aacute;n b&#x1EB1;ng th&#x1EBB; qu&#x1ED1;c t&#x1EBF; Visa, Master, JCB
        a(href='./congrats.html')
          button.btn.btn-primary.confirm-btn.red-btn
            | &Dstrok;&#x1EB7;t mua

block footer
  include ./template-parts/footer

block customizeScript
  script(src="./script/except-home-page.js")