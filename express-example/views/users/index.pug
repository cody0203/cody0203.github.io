extends ../../layouts/common

block content
    .container.mt-3
        h1 Users
        a.btn.btn-primary.mb-3(href="/users/create", title="title") Create New User 
        form(action="users/search" method="GET")
            .form-group.d-flex
                input.form-control(type="text" placeholder="Searching" id="search-input" name="q" value=q ? q : "")
                button.btn.btn-primary.ml-3 Search
            table.table.table-hover
                thead.thead-light
                    th Name
                    th Phone
                    th Action
                tbody
                each user in users
                    tr
                        td= user.name
                        td=user.phone
                        td
                            a(href=`/users/${user.id}`) View
        if !existedName && q
            p Not found