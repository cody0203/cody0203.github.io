extends ../../layouts/common

block content
    .container.mt-3
        h1 Create new product

        if errors
            each error in errors
                .alert.alert-danger=error
        form(action="/products/create" method="POST")
            .form-group
            Label(for="name") Name 
            input#name.form-control(type="text" name="name" value=values ? values.name : "")

            .form-group
            Label(for="image") Image 
            input#image.form-control(type="text" name="image" value=values ? values.image : "")

            .form-group
            Label(for="description") Description 
            input#description.form-control(type="text" name="description" value=values ? values.description : "")

            .form-group
            Label(for="price") Price 
            input#price.form-control(type="text" name="price" value=values ? values.price : "")
            button.btn.btn-primary.mt-3 Create